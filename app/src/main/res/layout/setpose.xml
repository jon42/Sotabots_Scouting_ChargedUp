<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#201F1D">
    <Button
        android:id="@+id/Red1Button"
        android:layout_width="165dp"
        android:layout_height="165dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/button_shape"
        android:backgroundTint="#F3FF0000"
        android:fontFamily="serif"
        android:text="Red 1"
        android:textSize="34sp"
        app:backgroundTint="#FF0000"
        app:iconTint="#FF0000"
        app:layout_constraintBottom_toTopOf="@+id/red2Button"
        app:layout_constraintEnd_toStartOf="@+id/Blue1Button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/red2Button"
        android:layout_width="165dp"
        android:layout_height="165dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/button_shape"
        android:backgroundTint="#F3FF0000"
        android:fontFamily="serif"
        android:text="Red 2"
        android:textSize="34sp"
        app:backgroundTint="#FF0000"
        app:iconTint="#FF0000"
        app:layout_constraintBottom_toTopOf="@+id/red3Button"
        app:layout_constraintEnd_toEndOf="@+id/Red1Button"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/Red1Button"
        app:layout_constraintTop_toBottomOf="@+id/Red1Button" />

    <Button
        android:id="@+id/Blue1Button"
        android:layout_width="165dp"
        android:layout_height="165dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/button_shape"
        android:backgroundTint="#F30000FF"
        android:fontFamily="serif"
        android:text="Blue 1"
        android:textSize="32sp"
        app:layout_constraintBottom_toBottomOf="@+id/Red1Button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/Red1Button"
        app:layout_constraintTop_toTopOf="@+id/Red1Button" />

    <Button
        android:id="@+id/blue2Button"
        android:layout_width="165dp"
        android:layout_height="165dp"
        android:background="@drawable/button_shape"
        android:backgroundTint="#F30000FF"
        android:fontFamily="serif"
        android:text="Blue 2"
        android:textSize="32sp"
        app:layout_constraintBottom_toBottomOf="@+id/red2Button"
        app:layout_constraintEnd_toEndOf="@+id/Blue1Button"
        app:layout_constraintStart_toStartOf="@+id/Blue1Button"
        app:layout_constraintTop_toTopOf="@+id/red2Button" />

    <Button
        android:id="@+id/blue3Button"
        android:layout_width="165dp"
        android:layout_height="165dp"
        android:background="@drawable/button_shape"
        android:backgroundTint="#F20000FF"
        android:fontFamily="serif"
        android:text="Blue 3"
        android:textSize="32sp"
        app:layout_constraintBottom_toBottomOf="@+id/red3Button"
        app:layout_constraintEnd_toEndOf="@+id/Blue1Button"
        app:layout_constraintStart_toStartOf="@+id/Blue1Button"
        app:layout_constraintTop_toTopOf="@+id/red3Button" />
    <Button
        android:id="@+id/red3Button"
        android:layout_width="165dp"
        android:layout_height="165dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/button_shape"
        android:backgroundTint="#F3FF0000"
        android:fontFamily="serif"
        android:text="Red 3"
        android:textSize="34sp"
        app:backgroundTint="#FF0000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/Red1Button"
        app:layout_constraintHorizontal_bias="0.138"
        app:layout_constraintStart_toStartOf="@+id/Red1Button"
        app:layout_constraintTop_toBottomOf="@+id/red2Button" />

</androidx.constraintlayout.widget.ConstraintLayout>